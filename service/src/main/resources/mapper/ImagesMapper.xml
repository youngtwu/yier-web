    <!-- 根据条件查询列表 -->
    <select id="listImages" parameterType="com.yier.platform.common.requestParam.ImagesRequest"
            resultMap="BaseResultMap">
        select t.* from t_images t
        <where>
            <if test="imageId != null">
                and t.id = #{imageId}
            </if>
            <if test="typeId != null">
                and t.type_id = #{typeId}
            </if>
            <if test="osType != null">
                and t.os_type = #{osType}
            </if>
            <if test="markId != null">
                and t.mark_id = #{markId}
            </if>
            <if test="!@org.springframework.util.CollectionUtils@isEmpty(markIds)">
                AND t.mark_id IN
                <foreach collection="markIds" close=")" open="(" separator="," item="markIdInfo">
                    #{markIdInfo}
                </foreach>
            </if>
            <if test="databaseId != null">
                and t.database_id = #{databaseId}
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotBlank( searchKey )">
                and (t.`title` like concat('%',#{searchKey},'%')
                or t.`name` like concat('%',#{searchKey},'%')
                )
            </if>
            <if test="status != null">
                and t.status = #{status}
            </if>
        </where>
        <choose>
            <when test="sort!=null and order!=null">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by t.display_order asc
            </otherwise>
        </choose>
        <choose>
            <when test="start!=null and size!=null">
                limit #{start},#{size}
            </when>
            <when test="start==null and size!=null">
                limit #{size}
            </when>
        </choose>
    </select>

